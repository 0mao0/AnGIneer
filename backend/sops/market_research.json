{
  "id": "market_research",
  "name_zh": "市场调研流程",
  "name_en": "Market Research Process",
  "description_zh": "针对特定主题进行市场调研，汇总发现并发送报告邮件。",
  "description_en": "Conduct a market research on a specific topic, summarize findings, and email the report.",
  "steps": [
    {
      "id": "step_search_market",
      "name_zh": "搜索市场数据",
      "name_en": "Search Market Data",
      "description_zh": "搜索与该主题相关的市场趋势。",
      "description_en": "Search for market trends related to the topic.",
      "tool": "web_search",
      "inputs": {
        "query": "${topic} market trends 2025"
      },
      "outputs": {
        "market_data": "results"
      }
    },
    {
      "id": "step_search_competitors",
      "name_zh": "搜索竞争对手",
      "name_en": "Search Competitors",
      "description_zh": "搜索该领域的主要竞争对手。",
      "description_en": "Search for key competitors in the field.",
      "tool": "web_search",
      "inputs": {
        "query": "top competitors in ${topic}"
      },
      "outputs": {
        "competitor_data": "results"
      }
    },
    {
      "id": "step_summarize",
      "name_zh": "汇总发现",
      "name_en": "Summarize Findings",
      "description_zh": "将所有收集到的数据汇总成简洁的文本。",
      "description_en": "Summarize all collected data into a concise text.",
      "tool": "summarizer",
      "inputs": {
        "text": "Market Data: ${market_data}\nCompetitor Data: ${competitor_data}",
        "max_words": 100
      },
      "outputs": {
        "executive_summary": "."
      }
    },
    {
      "id": "step_generate_report",
      "name_zh": "生成报告",
      "name_en": "Generate Report",
      "description_zh": "创建正式的报告格式。",
      "description_en": "Create a formal report format.",
      "tool": "report_generator",
      "inputs": {
        "title": "${topic} Market Research Report",
        "data": "${executive_summary}"
      },
      "outputs": {
        "final_report": "."
      }
    },
    {
      "id": "step_email",
      "name_zh": "发送邮件",
      "name_en": "Email Report",
      "description_zh": "将报告发送给利益相关者。",
      "description_en": "Send the report to the stakeholder.",
      "tool": "email_sender",
      "inputs": {
        "recipient": "boss@company.com",
        "subject": "Research: ${topic}",
        "body": "${final_report}"
      },
      "outputs": {
        "email_status": "."
      }
    }
  ]
}
