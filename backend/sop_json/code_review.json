{
  "id": "code_review",
  "name_zh": "code_review",
  "name_en": "code_review",
  "description": "Code Review SOP",
  "mtime": 1768699705.205284,
  "steps": [
    {
      "id": "step_1",
      "name": "Read Source Code File",
      "description": "Read the source code file from the specified file path.",
      "tool": "file_reader",
      "inputs": {
        "file_path": "${file_path}"
      },
      "outputs": {
        "source_code": "."
      },
      "notes": "",
      "analysis_status": "analyzed"
    },
    {
      "id": "step_2",
      "name": "Lint Code",
      "description": "Analyze the source code for linting issues using a code linter.",
      "tool": "code_linter",
      "inputs": {
        "code": "${source_code}"
      },
      "outputs": {
        "lint_issues": "."
      },
      "notes": "",
      "analysis_status": "analyzed"
    },
    {
      "id": "step_3",
      "name": "Summarize Linting Issues",
      "description": "Generate a concise summary of the linting issues found, limited to 30 words.",
      "tool": "summarizer",
      "inputs": {
        "text": "Linting Issues Found:\n${lint_issues}",
        "max_words": "30"
      },
      "outputs": {
        "review_summary": "."
      },
      "notes": "",
      "analysis_status": "analyzed"
    },
    {
      "id": "step_4",
      "name": "Generate Final Report",
      "description": "Create a final code review report with title, source length, linting issues, and summary.",
      "tool": "report_generator",
      "inputs": {
        "title": "Code Review: ${file_path}",
        "data": "Source Length: ${source_code}\n\nIssues:\n${lint_issues}\n\nSummary:\n${review_summary}"
      },
      "outputs": {
        "final_report": "."
      },
      "notes": "",
      "analysis_status": "analyzed"
    }
  ]
}