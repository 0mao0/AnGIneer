{
  "id": "market_research",
  "name_zh": "market_research",
  "name_en": "market_research",
  "description": "Market Research SOP",
  "mtime": 1768699713.820856,
  "steps": [
    {
      "id": "step_1",
      "name": "Step 1",
      "description": "Search for market trends in the specified topic for 2025.",
      "tool": "web_search",
      "inputs": {
        "query": "${topic} market trends 2025"
      },
      "outputs": {
        "market_data": "results"
      },
      "notes": "",
      "analysis_status": "analyzed"
    },
    {
      "id": "step_2",
      "name": "Step 2",
      "description": "Search for top competitors in the specified topic.",
      "tool": "web_search",
      "inputs": {
        "query": "top competitors in ${topic}"
      },
      "outputs": {
        "competitor_data": "results"
      },
      "notes": "",
      "analysis_status": "analyzed"
    },
    {
      "id": "step_3",
      "name": "Step 3",
      "description": "Summarize the market and competitor data into an executive summary.",
      "tool": "summarizer",
      "inputs": {
        "text": "Market Data: ${market_data}\nCompetitor Data: ${competitor_data}",
        "max_words": "100"
      },
      "outputs": {
        "executive_summary": "."
      },
      "notes": "",
      "analysis_status": "analyzed"
    },
    {
      "id": "step_4",
      "name": "Step 4",
      "description": "Generate a final report using the executive summary.",
      "tool": "report_generator",
      "inputs": {
        "title": "${topic} Market Research Report",
        "data": "${executive_summary}"
      },
      "outputs": {
        "final_report": "."
      },
      "notes": "",
      "analysis_status": "analyzed"
    },
    {
      "id": "step_5",
      "name": "Step 5",
      "description": "Send the final report via email to the boss.",
      "tool": "email_sender",
      "inputs": {
        "recipient": "boss@company.com",
        "subject": "Research: ${topic}",
        "body": "${final_report}"
      },
      "outputs": {
        "email_status": "."
      },
      "notes": "",
      "analysis_status": "analyzed"
    }
  ]
}